/* Header
************************/
* {
  padding 0
  margin 0
  box-sizing border-box
  outline none
}
html, body {
  font-family: 'HarmoniaSansProCyr-Regular';
  font-weight 400
  line-height 1.2em
}

.header {
  //background $black
  position absolute
  width: 100%;
  left: 0;
  top:60px;
  z-index 100;
  &__container {
    width: 1060px;
    margin: 0 auto;
  }
}

.nav {
  text-align center
  font-size 0
  &__item {
    transition color 400ms ease, border 200ms linear;
    font-size 22px;
    color: #FFFFFF
    text-transform uppercase
    text-decoration none
    display inline-block
    margin: 0 21px;
    padding 19px 0
    &:first-child {
      margin: 0 21px 0 0;
    }
    &:last-child {
      margin: 0 0 0 21px;
    }
    &:hover {
      color: $red
      border-bottom 5px solid $red;
    }
    //&_active {
    //  color: $red
    //  border-bottom 5px solid $red;
    //}
  }

  &_light {
    .nav__item {
      font-family HarmoniaSansProCyr-Light, sans-serif;
      &:hover {
        border-bottom 0;
      }
    }
    //.nav__item_active {
    //  border-bottom: 0;
    //}
  }
}