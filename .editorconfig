# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file

[*]
end_of_line = LF
indent_style = tab
indent_size = 4
charset = utf-8
insert_final_newline = true

[*.stylus]
indent_style = tab
indent_size = 2

[*.jade]
trim_trailing_whitespace = false
indent_style = tab
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
